<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Servlets -->
    <servlet>
        <servlet-name>UserAPI</servlet-name>
        <servlet-class>org.example.api.UserAPI</servlet-class>
    </servlet>
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>UserAPI</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!-- Servlets -->
    <servlet>
        <servlet-name>AllProductsAPI</servlet-name>
        <servlet-class>org.example.api.AllProductsAPI</servlet-class>
    </servlet>
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>AllProductsAPI</servlet-name>
        <url-pattern>/allProducts</url-pattern>
    </servlet-mapping>

    <!-- Servlets -->
    <servlet>
        <servlet-name>ProductAPI</servlet-name>
        <servlet-class>org.example.api.ProductAPI</servlet-class>
    </servlet>
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>ProductAPI</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <!-- Servlets -->
    <servlet>
        <servlet-name>GrnAPI</servlet-name>
        <servlet-class>org.example.api.GrnAPI</servlet-class>
    </servlet>
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>GrnAPI</servlet-name>
        <url-pattern>/grn</url-pattern>
    </servlet-mapping>

</web-app>